<resources>

    <declare-styleable name="LightTheme">
        <attr name="icon_more" format="reference" />
        <attr name="icon_share" format="reference" />
        <attr name="icon_repeat" format="reference" />

        <attr name="drawable_field" format="reference" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="text_color" format="color" />
        <attr name="text" format="string" />
        <attr name="font" format="string" />
        <attr name="align" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="-1" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BindingView">
        <attr name="binding_normal" format="boolean"/>
        <attr name="binding_limit_low" format="boolean"/>
        <attr name="binding_limit_high" format="boolean"/>
        <attr name="binding_target" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DashLayout">
        <attr name="columns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TimelineView">
        <attr name="foreground_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SegmentsView">
        <attr name="drawable" format="reference" />
        <attr name="segments_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

</resources>
